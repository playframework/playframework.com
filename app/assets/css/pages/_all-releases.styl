@keyframes bounce
    0%
        background-position: 30px 20px
    50%
        background-position: 30px 40px
    100%
        background-position: 30px 20px

@keyframes flashing
    0%
        color: #333
    50%
        color: green
    100%
        color: #333

.alternatives 
    @extend .content-column

    table a:after
        content: none

    .deprecated
        background: yellow
        padding: 30px
    hr
        width: 70%
        border: none
        border-top: 1px solid #ddd

    .downloads
        background: #333
        clear: after
        color: #777
        padding: 30px
        a, strong
            color: white
        h2, h3
            margin: 0
            padding: 0
            border: 0
            color: inherit
            text: title bold
        a
            font-weight: bold
            text-decoration: none
        li
            position: relative
            padding-left: 15px
            margin: 5px 0
            :before
                content: "â–º"
                position: absolute
                top: 3px
                left: 0
                margin-right: 5px
                color: #777
                font-size: 10px
    .row
        width 50%
        float: right
    .cols
        width: 50%
        float left
        a:hover
            text-decoration: underline
    h3:target
        animation: flashing 500ms 4 linear
    .latest
        width: 400px
        float: left
        position: relative
        background: green image("download/download-big-icon.png") 10px 10px no-repeat
        retina("download/download-big-icon.png", 50px)
        padding: 7px 20px 10px 80px
        border-radius: 3px
        color: #547C18
        box-shadow: 0 3px 0 rgba(green, .7)
        @media only screen and (max-width: 450px)
            padding: 20px 10px 20px 40px
            background-image: none
        h2
            margin: 0 0 5px
        &:hover
            background-color: blue
            color: white
            box-shadow: 0 3px 0 rgba(blue, .7)
        .cover:after
            content: ' '
            position: absolute
            top: 0
            left: 0
            right: 0
            bottom: 0
    @media only screen and (max-width: 960px)
        .downloads
            padding: 1px 10px
        .row, .cols, .latest
            float: none
            display: block
            width: auto
            margin: 10px auto

    .version
        margin: 20px 0
    .show-all-versions
        font-size: 12px
        margin: 0 10px
        cursor: pointer

    .updates
        margin: 10px 0 40px
        text-align: center
        a
            display: inline-block
            background: blue image("download/twitter-big-icon.png") 10px 10px no-repeat
            retina("download/twitter-big-icon.png", 25px 20px)
            color: white
            margin: 0
            padding: 10px 20px 10px 40px
            text: title
            border-radius: 3px
            box-shadow: 0 3px 0 blue - #111
            white-space: nowrap
            &:after
                content: none

    .changelogLink
        font-size: 0.9em
        margin: 10px 0 20px

    .previousVersionHeading
        float:left

    .instructionLink
        margin-left: 8px
        font-size: 12px
        margin-top: 1em
        line-height: 58px;